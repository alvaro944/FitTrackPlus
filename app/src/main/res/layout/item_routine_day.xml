<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:padding="12dp"
    android:layout_marginBottom="24dp"
    android:elevation="2dp">

    <!-- Nombre del día de la rutina -->
    <EditText
        android:id="@+id/editTextDayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Día de entrenamiento (ej: Push)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="textCapWords"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Contenedor donde se agregan ejercicios -->
    <LinearLayout
        android:id="@+id/containerExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:layout_marginBottom="16dp" />

    <!-- Botón para añadir ejercicio -->
    <Button
        android:id="@+id/buttonAddExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Añadir ejercicio"
        android:layout_gravity="end" />
</LinearLayout>
