<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸŸ¦ Frase motivacional -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMotivational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/azul_claro">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textMotivation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€œEl dolor es temporal, la gloria es para siempreâ€"
                    android:textSize="18sp"
                    android:textColor="@color/gris_texto"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Arnold Schwarzenegger"
                    android:textSize="14sp"
                    android:textColor="@color/gris_texto"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŸ§ Botones de acciÃ³n rÃ¡pida -->
        <LinearLayout
            android:id="@+id/quickActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEntrenarAhora"
                    style="@style/FitTrackPlus.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrenar\nahora"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:maxLines="2" />
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonVerRutinas"
                    style="@style/FitTrackPlus.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis\nrutinas"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:maxLines="2" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸŸ¨ Resumen rutina activa -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardResumenRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textResumenRutina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando resumen de rutina..."
                    android:textColor="@color/gris_texto"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonVerHistorialDesdeResumen"
                    style="@style/FitTrackPlus.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver historial"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ§± Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gris_texto"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- ðŸŸª Logros recientes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logros recientes"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Placeholder -->
        <TextView
            android:id="@+id/textLogros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ… AÃºn no has desbloqueado logros."
            android:textSize="14sp"
            android:textColor="@color/gris_texto" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>