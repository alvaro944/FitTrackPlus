<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAddTraining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- BotÃ³n para crear una nueva rutina -->
    <Button
        android:id="@+id/buttonCreateRoutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear nueva rutina" />
    <Button
        android:id="@+id/buttonIrARegistrarEntreno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Entrenamiento"/>


    <!-- Lista de rutinas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRoutines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
